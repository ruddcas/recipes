<% if obj.errors.any? %>
	<div class="row">
		<div class="col-md-8 offset-md-2">
			<div class="card">
				<div class="card-header color_danger">
						<%= pluralize(obj.errors.count, "error") %> prohibited this <%= obj.class %> from being saved:
				</div>					
					<div class="card-body">
						<div class="card-header">
							<ul>
								<% obj.errors.full_messages.each do |msg| %>
									<li><%= msg %></li>
								<% end %>
							</ul>
						</div>
					</div>					
			</div>
		</div>
	</div>
<% end %>
